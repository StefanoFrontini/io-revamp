{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "padding": 5,
  "data": {
    "url": "https://gist.githubusercontent.com/StefanoFrontini/d615dacd6d07d3605cc7e27ce8292a7a/raw/482ed276fe487bae39d92d1213e2aaf258701e2d/io-revamp.json",
    "format": { "property": "services" }
  },
  "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    }
  ],
  "mark": { "type": "bar", "width": { "band": 0.7 }, "cornerRadiusEnd": 5 },
  "encoding": {
    "y": {
      "field": "count",
      "type": "quantitative",
      "axis": {
        "format": "~s",
        "labelFontWeight": 600,
        "labelFont": "titilliumWeb",
        "domain": false
      }
    },
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {
        "gridDash": [4, 4],
        "grid": true,
        "gridColor": "#D2D6E3",
        "labelAngle": 0,
        "labelFontWeight": 600,
        "labelFont": "titilliumWeb",
        "tickDash": [4, 4]
      }
    },
    "color": { "value": "#0B3EE3" },
    "tooltip": [
      {
        "field": "year"
      },
      {
        "field": "count",
        "format": ","
      }
    ]
  }
}
