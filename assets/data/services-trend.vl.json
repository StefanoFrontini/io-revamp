{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "padding": 5,
  "data": {
    "url": "https://pdnd-prod-dl-1-public-data.s3.eu-central-1.amazonaws.com/dashboard/send/dashboard-send-sezione1.json",
    "format": { "property": "notifiche_per_mese" }
  },
  "mark": { "type": "bar", "width": { "band": 0.7 }, "cornerRadiusEnd": 5 },
  "encoding": {
    "y": {
      "field": "num_iun_total",
      "type": "quantitative",
      "axis": {
        "format": "~s",
        "labelFontWeight": 600,
        "labelFont": "Titillium Web, sans-serif"
      }
    },
    "x": {
      "field": "month",
      "timeUnit": "month",
      "type": "ordinal",
      "axis": {
        "gridDash": [6, 6],
        "tickCount": 12,
        "grid": true,
        "labelFontWeight": 600,
        "labelFont": "Titillium Web, sans-serif"
      }
    },
    "color": { "value": "#0B3EE3" },
    "tooltip": [
      {
        "field": "month",
        "type": "temporal",
        "title": "Mese",
        "format": "%m/%Y"
      },
      { "field": "cumulative", "title": "Notifiche cumulate", "format": "," },
      {
        "field": "num_iun_total",
        "title": "Notifiche mensili",
        "format": ","
      }
    ]
  }
}
