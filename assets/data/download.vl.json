{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://gist.githubusercontent.com/StefanoFrontini/d615dacd6d07d3605cc7e27ce8292a7a/raw/482ed276fe487bae39d92d1213e2aaf258701e2d/io-revamp.json",
    "format": { "property": "downloads" }
  },
  "params": [{ "name": "year", "value": null }],
  "transform": [{ "filter": "year === null || year(datum.date) === year" }],
  "mark": {
    "type": "area",
    "line": {
      "color": "#0B3EE3"
    },
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "stops": [
        {
          "offset": 0,
          "color": "white"
        },
        {
          "offset": 1,
          "color": "#0B3EE3"
        }
      ],
      "gradient": "linear"
    }
  },
  "encoding": {
    "y": {
      "field": "count",
      "type": "quantitative",
      "axis": {
        "format": "~s",
        "labelFontWeight": 600,
        "labelFont": "Titillium Web, sans-serif",
        "domain": false
      }
    },
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "yearmonthdate",
      "axis": {
        "labelExpr": "year === null ? timeFormat(datum.value, '%b %Y') : timeFormat(datum.value, '%b')",
        "gridDash": [4, 4],
        "labelFontWeight": 600,
        "labelFont": "Titillium Web, sans-serif",
        "labelOverlap": "parity",
        "tickDash": [4, 4]
      }
    },
    "tooltip": [
      {
        "field": "date",
        "type": "temporal",
        "format": "%b %Y"
      },
      {
        "field": "count",
        "format": ","
      }
    ]
  }
}
