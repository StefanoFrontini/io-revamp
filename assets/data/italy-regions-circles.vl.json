  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/openpolis/geojson-italy/refs/heads/master/topojson/limits_IT_regions.topo.json",
        "format": { "type": "topojson", "feature": "regions" }
      },
      "projection": { "type": "mercator" },
      "mark": { "type": "geoshape", "fill": "#eeeeee", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://gist.githubusercontent.com/StefanoFrontini/d615dacd6d07d3605cc7e27ce8292a7a/raw/482ed276fe487bae39d92d1213e2aaf258701e2d/io-revamp.json",
        "format": { "property": "services_by_region" }
      },
      "transform": [
        {
          "lookup": "regione",
          "from": {
            "data": { "name": "regions_coordinates" },
            "key": "regione",
            "fields": ["longitude", "latitude"]
          }
        }
      ],
      "projection": { "type": "mercator" },
      "mark": "circle",
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "num_serv",
          "type": "quantitative",
          "scale": { "range": [0, 3000] },
          "legend": null
        },
        "color": { "value": "#0B3EE3" },
        "opacity": {
          "field": "num_serv",
          "type": "quantitative",
          "scale": { "domain": [0, 55000], "range": [0.1, 0.7] },
          "legend": null
        },
        "tooltip": [
          { "field": "regione", "type": "nominal" },
          {
            "field": "num_serv",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
